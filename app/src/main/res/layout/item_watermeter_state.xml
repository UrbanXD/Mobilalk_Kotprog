<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_water_meter_state_height"
    android:gravity="center"
    android:background="@drawable/rounded_corner_8dp"
    android:backgroundTint="@color/white"
    android:padding="@dimen/small_separator"
    android:layout_marginVertical="@dimen/gap" >

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_small_font_size"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_small_font_size"
        android:textColor="@color/black"
        android:textAlignment="textEnd" />
</LinearLayout>