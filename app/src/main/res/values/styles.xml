<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginStart">@dimen/small_separator</item>
        <item name="android:layout_marginEnd">@dimen/small_separator</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/min_touchable_layout_height</item>
        <item name="android:layout_marginTop">@dimen/small_separator</item>
    </style>

    <style name="AppEditTextTablet" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/min_touchable_layout_height</item>
        <item name="android:layout_marginTop">@dimen/small_separator</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
    </style>

    <style name="AppErrorText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="AppErrorTextTablet" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tablet_error_text_font_size</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
</resources>